<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="1dp"
            android:paddingEnd="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:paddingStart="4dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/ic_thumb"
            android:layout_alignEnd="@id/ic_thumb"
            android:layout_alignRight="@id/ic_thumb"
            tools:ignore="ContentDescription"
            app:tint="@android:color/black" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_toEndOf="@+id/icon_container"
        android:layout_toRightOf="@+id/icon_container"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            android:textStyle="bold"
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Sample App"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand me to see a detailed message!"
            android:textColor="#CC000000"
            android:textSize="@dimen/_11sdp"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/notification_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_container"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="3dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:paddingEnd="3dp"
        tools:ignore="RelativeOverlap,RtlSymmetry" />

</RelativeLayout>